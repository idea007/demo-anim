<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/motion_2_1_scene"
>

    <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="70dp"
            android:background="#ffffff">

        <ImageView
                android:layout_width="30dp" android:layout_height="30dp"
                android:src="@mipmap/ic_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
        />

    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="70dp"
            android:background="#ff982b"
            android:layout_marginTop="70dp"
    >

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="右边的文字"
                android:textSize="24sp"
                android:textColor="#967899"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"

        />

        <View android:layout_width="match_parent" android:layout_height="5dp"
              android:background="@color/black"
              android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <TextView
            android:id="@+id/rl_two_title"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="标题"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
    />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_two">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.motion.widget.MotionLayout>