<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_container"
        tools:context="com.dafay.demo.anim.ui.act.MainActivity">

    <com.dafay.demo.anim.ui.weight.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"
            android:background="#10ff0000"/>

    <com.dafay.demo.anim.ui.weight.CircularImageView
            android:id="@+id/civ_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/img_0"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>


    <Button
            android:id="@+id/btn_click_changebounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ChangeBounds 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />


    <Button
            android:id="@+id/btn_click_changetransform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ChangeTransform 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />

    <Button
            android:id="@+id/btn_click_changeclipbounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ChangeClipBounds 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />

    <Button
            android:id="@+id/btn_click_changeimagetransform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ChangeImageTransform 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="170dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />

    <Button
            android:id="@+id/btn_click_arcmotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ArcMotion 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="220dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />

    <Button
            android:id="@+id/btn_click_changescroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换场景： ChangeScroll 动画"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="270dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
    />
</RelativeLayout>