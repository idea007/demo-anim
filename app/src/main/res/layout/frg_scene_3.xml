<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dafay.demo.anim.ui.act.MainActivity">

    <RelativeLayout
            android:id="@+id/rl_lattice_4"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="更多设置"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"

        />

        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_5"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="关于我们"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"

        />


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_6"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="意见反馈"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"

        />


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_7"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="隐私协议"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
        />


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_3"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_2"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_1"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080">


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_lattice_0"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080"
    >


        <TextView
                android:id="@+id/tv_menu"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="目录"
                android:paddingLeft="20dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"/>


        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:visibility="gone"/>


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_lattice_top"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff">


        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_lattice_boottom"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff">

        <View
                android:layout_width="match_parent" android:layout_height="4dp"
                android:background="@color/black"/>


    </RelativeLayout>


    <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="测试"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>


</RelativeLayout>