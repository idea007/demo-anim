<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dafay.demo.anim.ui.act.MainActivity">


    <TextView
            android:id="@+id/tv_menu"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="目录"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080"
    />


    <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="gone"
            android:foreground="@drawable/ripple_rect_color_40808080">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@mipmap/ic_back"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="20dp"
        />

    </RelativeLayout>


    <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="设置"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080"/>


    <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="关于"
            android:minHeight="80dp"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:foreground="@drawable/ripple_rect_color_40808080"/>


    <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="top"
            android:paddingLeft="20dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="#ffffff"/>


    <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="bottom"
            android:paddingLeft="20dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>


    <View
            android:id="@+id/v_divider_0"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_1"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_2"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_3"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_4"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_5"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_6"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_7"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_8"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>

    <View
            android:id="@+id/v_divider_9"
            android:layout_width="match_parent" android:layout_height="4dp"
            android:background="@color/black"/>


</RelativeLayout>